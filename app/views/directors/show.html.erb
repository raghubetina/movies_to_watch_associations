<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Director #<%= @director.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @director.name %></dd>

              <dt>Image url</dt>
              <dd><%= @director.image_url %></dd>

              <dt>Bio</dt>
              <dd><%= truncate(@director.bio) %></dd>

              <dt>Dob</dt>
              <dd><%= @director.dob %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to directors_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_director_url(@director.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to director_url(@director.id), :method => "delete", :data => { :confirm => "Do you really want to delete this director?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
        <li class="list-group-item list-group-item-success">
          Filmography
        </li>

        <% @director.movies.each do |movie| %>
          <li class="list-group-item">
            <%= movie.title %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
